@doctype html
@include ./_head.ttl
@include ./_header.ttl
@include ./_footer.ttl
@include ./_social.ttl
    
<html>
  <head> ${ _head.body() }
  <body>
    <div #page>
      <div #header> ${ _header.body() }
      <div #container>
        @@ fpath, metadata, htmltext = page.articles[0]
        ${ article(fpath, htmltext) }
      @if site.siteconfig['disqus'] :
        <div #myblog_disqus>
          ${ h.readfile( os.path.join('_social', 'disqus.html') ) }
    <hr>
    <div #footer> ${ _footer.body() }


@def article(fpath, htmltext) :
  <article>
    <div .article-title> ${title}
      <div .metaa>
        @if author :
          <span .author> by ${author};
        @if createdon  or date :
          <span .date> ${createdon or date}

    <div .content> ${ htmltext }

    <div .metaz>
      @if last_modified :
        <span .last_modified> last modified - ${last_modified};
      @if site.siteconfig['show_email'] and email :
        <a .email href="mailto:${email}"!> contact-author
        ;
    @if site.siteconfig['social_sharing'] :
      <div #myblog_social>
        ${ _social.body() }
    
